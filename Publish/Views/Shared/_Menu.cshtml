@using BMS.Entity
@using BMS.Web.Models
@using Entity = BMS.Entity.BMSMaster.Entity

@if (User.Identity.IsAuthenticated)
{
    @(Html.Kendo().ContextMenu().Name("contextMenu").Target("body")
          //.Filter("div")
          .Orientation(ContextMenuOrientation.Vertical).Animation(true)
          .HighlightPath(true)
          .Items(i =>
          {
              i.Add().Text("Change Company").Items(x =>
              {
                  foreach (var entity in User.GetEntities())
                  {
                      x.Add().Text(entity.Name).Action("ChangeEntity", "Account", new { id = entity.Id, returnUrl = Request.Url?.AbsolutePath }).HtmlAttributes(new { data_icon = "building-o" });
                  }
              }).HtmlAttributes(new {data_icon="sitemap"});

              if (User.IsInEntityRole(Role.Admin, ((Entity)Session[Key.Entity])?.Id??0))
              {
                  i.Add().Text("Reference").Items(x =>
                  {
                      x.Add().Text("Area").Action("Index", "Area").HtmlAttributes(new { data_icon = "map-signs" });
                      x.Add().Text("Vehicle").Action("Index", "Vehicle").HtmlAttributes(new { data_icon = "bus" });
                      x.Add().Text("Customer").Action("Index", "Customer").HtmlAttributes(new { data_icon = "id-card-o" });
                      x.Add().Text("Brand").Action("Index", "Brand").HtmlAttributes(new { data_icon = "certificate" });
                      x.Add().Text("Category").Action("Index", "Category").HtmlAttributes(new { data_icon = "creative-commons" });
                      x.Add().Text("Product").Action("Index", "Product").HtmlAttributes(new { data_icon = "product-hunt" });
                      x.Add().Text("Unit of Measure").Action("Index", "UnitOfMeasure").HtmlAttributes(new { data_icon = "balance-scale" });
                  }).HtmlAttributes(new { data_icon = "cogs" });

                  i.Add().Text("Inventory").Items(x =>
                  {
                      x.Add().Text("Item").Action("Index", "Item").HtmlAttributes(new { data_icon = "stack-overflow" });
                      x.Add().Text("Invoice").Action("Index", "Invoice").HtmlAttributes(new { data_icon = "newspaper-o" });
                  }).HtmlAttributes(new { data_icon = "cubes" });
              }

              if (User.IsInEntityRole(new[] { Role.Admin, Role.Accountant }, ((Entity)Session[Key.Entity])?.Id ?? 0))
              {
                  i.Add().Text("Sales").Items(x =>
                  {
                      x.Add().Text("Bill").Action("Index", "Bill").HtmlAttributes(new { data_icon = "clipboard" });
                      x.Add().Text("Road Distribution").Action("Index", "RoadDistribution").HtmlAttributes(new { data_icon = "map-o" });
                  }).HtmlAttributes(new { data_icon = "handshake-o" });
              }

              if (User.IsInEntityRole(Role.Admin, ((Entity)Session[Key.Entity])?.Id ?? 0))
              {
                  i.Add().Text("Reports").Items(x =>
                  {
                      x.Add().Text("Billing Report").Action("BillingReport", "Report").HtmlAttributes(new { data_icon = "print" });
                      x.Add().Text("Collection Report").Action("CollectionReport", "Report").HtmlAttributes(new { data_icon = "print" });
                      x.Add().Text("Daily Bill Summary").Action("DailyBillSummary", "Report").HtmlAttributes(new { data_icon = "print" });
                      x.Add().Text("Road Distribution").Action("RoadDistribution", "Report").HtmlAttributes(new { data_icon = "print" });
                      x.Add().Text("Spot Stock Test").Action("SpotStockTest", "Report").HtmlAttributes(new { data_icon = "print" });
                  }).HtmlAttributes(new { data_icon = "line-chart" });
              }

              if (User.IsInEntityRole(new[] { Role.Admin, Role.Accountant }, ((Entity)Session[Key.Entity])?.Id ?? 0))
              {
                  i.Add().Text("Payments").Action("Index", "BillPayment").HtmlAttributes(new { data_icon = "money" });
              }

              i.Add().Text("Change Password").Action("ChangePassword","Manage").HtmlAttributes(new { id = "change-password", data_icon = "wrench" });
              i.Add().Text("Logout").HtmlAttributes(new { id = "log-out" }).HtmlAttributes(new { data_icon = "sign-out" });

              if (User.IsInRole(Role.SAdmin))
              {
                  i.Add().Text("Super Admin").Items(x =>
                  {
                      x.Add().Text("User").Action("Index", "UserRole").HtmlAttributes(new { data_icon = "building" });
                      x.Add().Text("Roles").Action("Index", "Role").HtmlAttributes(new { data_icon = "building" });
                      x.Add().Text("Payment Method").Action("Index", "PaymentMethod").HtmlAttributes(new { data_icon = "building" });
                  });
              }

              i.Add().Text("Help").Url(Url.Content("~/Content/Help/Manual.pdf")).LinkHtmlAttributes(new {target="_blank"}).HtmlAttributes(new { data_icon = "life-ring" });
          })
          .Events(e=>e.Activate("contextMenuOnOpen"))
          .HtmlAttributes(new {style="width:175px;"})
          )

    <script id="navbar-tooltip" type="text/x-kendo-template">
        <h4><i class="fa fa-bell-o blink_me" style="font-size:110%;"></i> Right Click to open the menu</h4>
    </script>

    @Html.Kendo().Tooltip().For(".navbar").Filter("i").ContentTemplateId("navbar-tooltip").Callout(true).ShowOn(TooltipShowOnEvent.MouseEnter)

    <script>
        var contextMenuOnOpen = function(e) {
            if ($('[data-icon] .k-link > i').length == 0) {
                $('[data-icon] .k-link')
                    .each(function(i, e) {
                        var content = $(e).html();
                        var icon = '<i class="fa fa-' + $(e).parent().data('icon') + '"></i>&nbsp;';
                        $(e).html(icon + content);
                    });
            }
        }
    </script>
}

